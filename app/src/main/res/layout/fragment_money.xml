<?xml  version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8F1AC"
    tools:context=".MoneyFragment">

    <TextView
        android:id="@+id/textExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="353dp"
        android:fontFamily="sans-serif-black"
        android:text="Expenses Amount:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editIncome"
        android:layout_width="212dp"
        android:layout_height="59dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="301dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editExpenses"
        android:layout_width="214dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="372dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editBudget"
        android:layout_width="116dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textBudget"
        android:layout_width="117dp"
        android:layout_height="38dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="28dp"
        android:capitalize="characters"
        android:fontFamily="sans-serif-black"
        android:text="BUDGET"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar0"
        android:layout_width="217dp"
        android:layout_height="25dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="480dp"
        android:progressTint="#47BD32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textRentValue"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="480dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@id/seekBar0"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="217dp"
        android:layout_height="25dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="624dp"
        android:progressTint="#47BD32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="628dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@id/seekBar1"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="217dp"
        android:layout_height="25dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="552dp"
        android:progressTint="#47BD32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSavingsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="556dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@id/seekBar2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="123dp"
        android:fontFamily="sans-serif-black"
        android:text="Total Amount:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="281dp"
        android:fontFamily="sans-serif-black"
        android:text="Income Amount:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <org.eazegraph.lib.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="171dp"
        android:layout_height="160dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="84dp"

        android:layout_weight="1"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="480dp"
        android:text="Rent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="552dp"
        android:text="Car"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="622dp"
        android:text="Savings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


