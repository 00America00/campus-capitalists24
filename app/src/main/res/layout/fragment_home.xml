<?xml  version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8F1AC"
    android:textAlignment="center"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar2"
        android:layout_width="357dp"
        android:layout_height="302dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="324dp"
        android:background="#47BD32"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="335dp"
        android:layout_height="62dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="48dp"
        android:background="#47BD32"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="28dp"
        android:text="Hello"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hello"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="48dp"
        android:text="@string/Hello"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_header"
        android:layout_width="209dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="264dp"
        android:text="@string/Curr_Balance"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <TextView
        android:id="@+id/checking"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"
        android:text="@string/Checking"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_header" />

    <EditText
        android:id="@+id/checkings_amt"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:inputType="number"
        android:text="10,000"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@+id/checking"
        app:layout_constraintTop_toBottomOf="@+id/home_header" />

    <TextView
        android:id="@+id/savings"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:text="@string/Savings"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/checking"
        app:layout_constraintTop_toBottomOf="@+id/checking" />

    <EditText
        android:id="@+id/savings_amt"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:inputType="number"
        android:text="1,000"
        app:layout_constraintStart_toStartOf="@+id/checkings_amt"
        app:layout_constraintTop_toBottomOf="@+id/checkings_amt" />

    <TextView
        android:id="@+id/home1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@+id/home_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello"
        app:layout_constraintVertical_bias="0.107" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="118dp"
        android:layout_height="111dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/defaultuserpicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>